<div class="jumbotron">
  <div class="container">
    <h1 class="display-4 text-center">EAT-DA-BURGERS!</h1>
    <img id="center-block" src="/assets/img/NicePng_pixel-png_1549907.png" alt="8-bit burger">

    <hr class="my-4">
    <div class="row">
      <div class="col-lg-6">
        <h2>Burgers that need devoured!</h2>

        <ul>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ul>
      </div>
      <div class="col-lg-6">
        <h2>Burgers that have been devoured!</h2>

        <ul>
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devoured=false}}
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>

    <h2 class="display-8 text-center">Add a burger</h2>
    <form class="create-form" id="center-block">

      <div class="form-group text-center">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <button class="btn btn-lg btn-primary" id="center-block" type="submit">Add burger</button>
    </form>
  </div>
</div>